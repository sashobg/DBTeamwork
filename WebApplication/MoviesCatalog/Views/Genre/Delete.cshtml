@model Movies.Models.Genre
@{
    ViewBag.Title = "Изтриване на жанр";
}

<div class="container">
    <div class="well">
        <h2>Изтрий жанр</h2>
        @using (Html.BeginForm("Delete", "Genre", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4 ">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Назад", "List", "Genre", new { @class = "btn btn-default" })
                    <input type="submit" value="Изтрий" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>