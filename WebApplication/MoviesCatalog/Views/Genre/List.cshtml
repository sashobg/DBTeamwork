
@model List<Movies.Models.Genre>

@{
    ViewBag.Title = "Всички жанрове";
}

<div class="container">
    <div class="well">
        <h2>Всички жанрове - @Html.ActionLink("Добави", "Create", "Genre", null, new { @class = "btn btn-warning" })</h2>
        <div class="row">
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Име</th>
                    <th>Опции</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var genre in Model)
                {
                    <tr>
                        <td>@genre.Id</td>
                        <td>@genre.Name</td>
                        
                        <td>
                            @Html.ActionLink("Редактирай", "Edit", "Genre", new { @id = genre.Id }, null)
                            @Html.ActionLink("Изтрий", "Delete", "Genre", new { @id = genre.Id }, null)
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>