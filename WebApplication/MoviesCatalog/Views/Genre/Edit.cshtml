@model Movies.Models.Genre

@{
    ViewBag.Title = "Редактиране на жанр";
}

<div class="container">
    <div class="well">
        <h2>Редактирай жанр</h2>
        @using (Html.BeginForm("Edit", "Genre", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>
            </div>

          
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Назад", "List", "Genre", new { @class = "btn btn-default" })
                    <input type="submit" value="Редактирай" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>